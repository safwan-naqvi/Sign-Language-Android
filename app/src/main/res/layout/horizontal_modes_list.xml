<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mode_container"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="16dp"
    android:elevation="1dp"
    android:background="@drawable/round_button_two">

    <ImageView
        android:id="@+id/mode_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_signs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mode_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alphabets Signs"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/retroica"
        android:textSize="16sp"
        android:textColor="@color/appBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mode_image" />

</androidx.constraintlayout.widget.ConstraintLayout>